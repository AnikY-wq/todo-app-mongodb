{
	"info": {
		"_postman_id": "todo-app-api-collection",
		"name": "Todo App API",
		"description": "Complete API collection for Todo App Backend with JWT Authentication, Task Management, User Management, and Audit Logs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "userToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "adminToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		},
		{
			"key": "taskId",
			"value": "",
			"type": "string"
		},
		{
			"key": "createdUserId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "1. Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.collectionVariables.set(\"userToken\", jsonData.data.token);",
									"        pm.collectionVariables.set(\"userId\", jsonData.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/signup",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "signup"]
						},
						"description": "Register a new user account. Returns JWT token and user data."
					}
				},
				{
					"name": "2. Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.collectionVariables.set(\"userToken\", jsonData.data.token);",
									"        pm.collectionVariables.set(\"userId\", jsonData.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login with existing credentials. Returns JWT token and user data."
					}
				},
				{
					"name": "3. Register Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.collectionVariables.set(\"adminToken\", jsonData.data.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/signup",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "signup"]
						},
						"description": "Register an admin user. You'll need to manually change role to admin via admin endpoints."
					}
				}
			]
		},
		{
			"name": "Tasks",
			"item": [
				{
					"name": "1. Create Task",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.task && jsonData.data.task._id) {",
									"        pm.collectionVariables.set(\"taskId\", jsonData.data.task._id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{userToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Complete project documentation\",\n  \"description\": \"Write comprehensive documentation for the Todo App API\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/tasks",
							"host": ["{{baseUrl}}"],
							"path": ["api", "tasks"]
						},
						"description": "Create a new task. Requires authentication. Admins can assign tasks to other users by including 'owner' field."
					}
				},
				{
					"name": "2. Get All Tasks",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{userToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tasks",
							"host": ["{{baseUrl}}"],
							"path": ["api", "tasks"]
						},
						"description": "Get all tasks for the authenticated user. Admins can see all tasks or filter by user with ?user=<userId>"
					}
				},
				{
					"name": "3. Get Single Task",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{userToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{taskId}}"
								}
							]
						},
						"description": "Get a single task by ID. Only owner or admin can access."
					}
				},
				{
					"name": "4. Update Task",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{userToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated task title\",\n  \"description\": \"Updated description\",\n  \"completed\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{taskId}}"
								}
							]
						},
						"description": "Update a task. Only owner or admin can update. You can update title, description, completed status, and owner (admin only)."
					}
				},
				{
					"name": "5. Delete Task",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{userToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{taskId}}"
								}
							]
						},
						"description": "Delete a task. Only owner or admin can delete."
					}
				},
				{
					"name": "6. Create Task as Admin (Assign to User)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Admin assigned task\",\n  \"description\": \"This task was assigned by admin\",\n  \"owner\": \"{{userId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/tasks",
							"host": ["{{baseUrl}}"],
							"path": ["api", "tasks"]
						},
						"description": "Admin can create tasks and assign them to any user by including the 'owner' field."
					}
				}
			]
		},
		{
			"name": "Users (Admin Only)",
			"item": [
				{
					"name": "1. Get All Users",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "Get all users. Admin only."
					}
				},
				{
					"name": "2. Create User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.user && jsonData.data.user.id) {",
									"        pm.collectionVariables.set(\"createdUserId\", jsonData.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"roles\": [\"user\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "Create a new user account. Admin only. Can specify roles."
					}
				},
				{
					"name": "3. Change User Role",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"roles\": [\"admin\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users/:id/role",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", ":id", "role"],
							"variable": [
								{
									"key": "id",
									"value": "{{userId}}"
								}
							]
						},
						"description": "Change user role. Admin only. Can set roles to ['user'] or ['admin']."
					}
				},
				{
					"name": "4. Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/users/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{createdUserId}}"
								}
							]
						},
						"description": "Delete a user account. Admin only. Cannot delete your own account."
					}
				}
			]
		},
		{
			"name": "Audit Logs (Admin Only)",
			"item": [
				{
					"name": "1. Get All Audit Logs",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/audit-logs?page=1&limit=20",
							"host": ["{{baseUrl}}"],
							"path": ["api", "audit-logs"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "20"
								},
								{
									"key": "taskId",
									"value": "",
									"description": "Filter by task ID",
									"disabled": true
								},
								{
									"key": "userId",
									"value": "",
									"description": "Filter by user ID",
									"disabled": true
								},
								{
									"key": "changeType",
									"value": "",
									"description": "Filter by change type (create, update, delete)",
									"disabled": true
								}
							]
						},
						"description": "Get all audit logs with pagination. Admin only. Supports filtering by taskId, userId, and changeType."
					}
				},
				{
					"name": "2. Get Task Audit Logs",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/audit-logs/task/:taskId",
							"host": ["{{baseUrl}}"],
							"path": ["api", "audit-logs", "task", ":taskId"],
							"variable": [
								{
									"key": "taskId",
									"value": "{{taskId}}"
								}
							]
						},
						"description": "Get audit logs for a specific task. Admin only."
					}
				}
			]
		},
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						},
						"description": "Check if the server is running."
					}
				}
			]
		}
	]
}

